{
  "name": "taskmaster-pro-backend",
  "version": "1.0.0",
  "description": "Backend server for TaskMaster Pro with MongoDB",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --inspect server.js",
    "dev:safe": "nodemon --inspect --ignore node_modules --delay 2 server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:db": "node testConnection.js",
    "seed": "node seeder/seedDatabase.js",
    "health": "curl http://localhost:5000/health",
    "logs": "pm2 logs taskmaster-backend",
    "monitor": "pm2 monit",
    "kill": "taskkill /f /im node.exe",
    "restart": "npm run kill && npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": ["mongodb", "express", "react", "project-management"],
  "author": "Project Bolt Team",
  "license": "MIT"
}
